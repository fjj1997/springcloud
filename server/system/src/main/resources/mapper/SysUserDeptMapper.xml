<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cddx.system.mapper.SysUserDeptMapper">

    <select id="countByDeptId" resultType="java.lang.Long">
        select ifnull(count(0), 0)
        from sys_user_dept
        where dept_id = #{deptId}
    </select>

    <delete id="deleteDeptByUserId" parameterType="Long">
        delete from sys_user_dept where user_id = #{userId};
    </delete>
</mapper>